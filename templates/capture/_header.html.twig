{# Header: title + account breadcrumb/info #}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="page-title">{{ templateMode ? 'Template de capture : ' : 'Capture : ' }}</h2>
    {% if capture.account is defined and capture.account is not null %}
        <div>
            <span class="text-muted">Compte :</span>
            <a href="{{ path('app_account_edit', { id: capture.account.id }) }}" class="col-header text-decoration-none">
                {{ capture.account.name }}
            </a>
        </div>
    {% endif %}
</div>
