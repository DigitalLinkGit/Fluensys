
    {#
                ----- STATUTS -----
    draft : instance créée, non publiée
    template : stade “bibliothèque / modèle”
    ready : prêt à lancer (rôles/assignations OK)
    collecting : collecte lancée (locked)
    pending : lancé mais bloqué / en attente d’une action (nouveau rôle requis, activation d’un élément, etc.)
    submitted : formulaire soumis
    validated : réponses validées (locked)
    #}

    {% if element.template or element.draft %}
        {% if is_granted('ROLE_ADMIN') %}
            {# EDIT ELEMENT RENDER TEXTE TEMPLATE #}
            <a href="{{ path('app_capture_element_render_text_edit', {
                id: element.id,
                captureId: capture.id,
            }) }}"
               class="btn btn-outline-primary btn-sm"
               title="Editer le texte de rendu" aria-label="Editer le texte de rendu">
                <i class="bi bi-file-earmark-text"></i>
            </a>
            {# EDIT ELEMENT TEMPLATE #}
            <a href="{{ path('app_capture_element_edit', {
                id: element.id,
                captureId: capture.id,
            }) }}"
               class="btn btn-outline-primary btn-sm"
               title="Editer le formulaire" aria-label="Editer le formulaire">
                <i class="bi bi-pencil"></i>
            </a>
            {# DELETE ELEMENT TEMPLATE #}
            <button
                type="button"
                class="btn btn-outline-danger btn-sm"
                data-action="click->modal-confirmation#open"
                data-modal-confirmation-action-value="{{ path('app_capture_element_delete', { id: element.id }) }}"
                data-modal-confirmation-token-value="{{ csrf_token('delete' ~ element.id) }}"
                data-modal-confirmation-message-value="Confirmer la suppression de cet élément ?"
                title="Supprimer cet élément">
                <i class="bi bi-trash"></i>
            </button>
        {% endif %}
    {% endif %}

    {% if element.submitted %}
        {% if is_granted('ROLE_USER') and element.active and element.validator is not null %}
            {# VALID ELEMENT #}
            <a href="{{ path('app_capture_element_valid', {
                id: element.id,
                captureId: capture.id,
            }) }}"
               class="btn btn-outline-primary btn-sm"
               title="Valider" aria-label="Valider">
                <i class="bi bi-ui-checks"></i>
            </a>
        {% endif %}
    {% endif %}

    {% if element.validated and is_granted('ROLE_ADMIN')%}
        {#ToDo : Ajouter unvalidate#}
    {% endif %}



