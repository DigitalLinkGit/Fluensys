{% if element is defined %}
    {% set collapseId = 'el_' ~ (element.id ?? loop.index) ~ '_fields' %}

    <div class="mb-0 {{ 'element' ~ (element.active ? '' : ' card-inactive') }}">

        <div class="element-card py-1">
            <div class="row g-0 align-items-center">

                {# Handle sortable if template #}
                {% if capture.template %}
                    <div class="col-auto pe-2 text-muted" data-sortable-handle style="cursor: grab;">
                        <i class="bi bi-grip-vertical"></i>
                    </div>
                {% endif %}

                {# Col Name #}
                <div class="col-3 pe-3 text-truncate">
                    <span class="fw-semibold text-truncate">{{ element.name }}</span>
                </div>

                {# Col Description #}
                <div class="col-6 pe-3 text-truncate">
                    <span class="text-truncate">{{ element.description }}</span>
                </div>

                {# Col Actions #}
                <div class="col-auto ms-auto">
                    <div class="d-flex align-items-center">

                        {# Actions buttons #}
                        <div class="d-flex justify-content-end gap-1 pe-2">
                            {% include 'capture/capture_element/_prototype_card_actions.html.twig' %}
                        </div>

                        {# status + collapser #}
                        <div class="d-inline-flex justify-content-end align-items-center gap-2 text-nowrap"
                             style="width: 130px;">
                            <span class="badge bg-secondary type-badge">
                                {{ element.statusLabel }}
                            </span>

                            <a href="#{{ collapseId }}"
                               class="collapse-chevron"
                               data-bs-toggle="collapse"
                               role="button"
                               aria-expanded="false"
                               aria-controls="{{ collapseId }}"
                               title="Ouvrir / Fermer">
                                <i class="bi bi-chevron-down"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="{{ collapseId }}" class="collapse">
            <div class="pt-3 mx-3 element-card-body">
                <div class="row g-0 align-items-center">
                    <span class="col-header">Contributeur :</span>
                            <span class="text-truncate">
                                {{ element.contributor is defined and element.contributor ? element.contributor.name : 'Aucune contribution' }}
                            </span>
                </div>
                <div class="row g-0 align-items-center">
                    <span class="col-header">Validateur :</span>
                            <span class="text-truncate">
                                {{ element.validator is defined and element.validator ? element.validator.name : 'Aucune validation' }}
                            </span>
                </div>

                {% if incomingConditions is defined and incomingConditions|length %}
                    <div class="mb-2">
                        <span class="col-header">Condition(s) :</span>
                        <div class="mx-3 mt-1">
                            {% for cond in incomingConditions %}
                                <div>{{ cond }}</div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                {% if element.fields is defined %}
                    <div class="mb-2">
                        <span class="col-header">Contenu :</span>
                        <div class="mx-3 mt-1">

                            {# Si un formulaire de réponse est fourni pour cet élément, l'afficher inline #}
                            {% if responseForms is defined and responseForms[element.id] is defined %}
                                {% set formView = responseForms[element.id] %}
                                {% set isDisabled = (capture.template) or (element.status.value in ['submitted', 'validated']) %}

                                {% include 'capture/capture_element/_inline_response_form.html.twig' with {
                                    element: element,
                                    form: formView,
                                    disabled: isDisabled,
                                    actionRoute: respondRoute|default('app_capture_element_respond'),
                                    actionParams: respondParams|default({ id: element.id })
                                } %}

                            {# Sinon, fallback sur l'affichage actuel des champs #}
                            {% else %}
                                {% for field in element.fields %}
                                    <div class="row"
                                         title="Nom : {{ field.name }}">
                                        <div class="col-md-12 mb-1">
                                            <span class="fw-semibold">{{ field.label }}</span>
                                            <span class="badge bg-secondary type-badge d-inline-block me-2">
                                            {{ field.type }}
                                        </span>
                                        </div>
                                        {% if element.status.value == 'submitted' or element.status.value == 'validated' %}
                                            <div class="mb-2 mx-2 preserve-newlines">{{ field.stringValue }}</div>
                                        {% else %}
                                            {# Display choice list if element is not submited or validated #}
                                            {% set choices = attribute(field, 'getChoices', [], 'method', false) %}
                                            {% if choices is not null and choices is not empty %}
                                                <div class="">
                                                    <ul>
                                                        {% for choice in choices %}
                                                            <li>{{ choice.label }}</li>
                                                        {% endfor %}
                                                    </ul>
                                                </div>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    <div class="text-muted small">Aucun champ</div>
                {% endif %}
            </div>
        </div>
    </div>


{% else %}
    <div class="col">
        <div class="alert alert-secondary mb-0">Aucun élément</div>
    </div>
{% endif %}
