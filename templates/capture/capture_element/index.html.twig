{% extends 'base.html.twig' %}

{% block title %}CaptureElement index{% endblock %}

{% block body %}
    <h2>Elements de capture</h2>

    {% include 'components/table/_table.html.twig' with {
        items: capture_elements,
        columns: ['id','name', 'description','statusLabel','capture.id'],
        headers: ['ID','Nom', 'Description','Statut','Capture'],
        filter: true,
        sort: true,
        add: {route: 'app_capture_element_new'},
        actions: [
            {
                route: 'app_capture_element_show',
                param_map: { id: 'id' },
                icon: 'bi-eye',
                label: 'Voir',
            },
            {
                route: 'app_capture_element_edit',
                param_map: { id: 'id' },
                icon: 'bi-pencil',
                label: 'Editer',
            },
            {
                route: 'app_capture_element_delete',
                param_map: { id: 'id' },
                icon: 'bi-trash',
                label: 'Supprimer',
            }
        ]
    } %}

{% endblock %}
