<fieldset class="mb-3 field-entry form-container mt-3 p-0 position-relative card"
          data-sortable-id="{{ form.vars.value.id ?? form.vars.name }}"
          data-type-label="{{ form.vars.type_label }}"
    {% if form.vars.value and form.vars.value.id %}
    data-delete-url="{{ path('app_flex_capture_field_delete', { id: form.vars.value.id }) }}"
    data-delete-token="{{ csrf_token('delete_field_' ~ form.vars.value.id) }}"
    {% endif %}>
    {{ form_row(form.position, { attr: { class: 'd-none position-input' } }) }}
    {{ form_row(form.type) }}
    {# CARD HEADER #}
    <div class="card-body d-flex align-items-center py-2 px-3">
        <span class="me-2 text-muted" data-sortable-handle style="cursor: grab;">
        <i class="bi bi-grip-vertical"></i>
    </span>
        <div class="mb-0 col-md-9">
            <div>
                {% include 'components/form/_ghost_field.html.twig' with {
                    field: form.label,
                    placeholder: 'Label…',
                    class: 'subtitle-textarea is-active',
                    attrs: { autocomplete: 'off' }
                } %}
            </div>
        </div>
        <div class="col-mb-0 card-actions ms-auto d-inline-flex align-items-center gap-2">
            <span class="badge bg-secondary type-badge d-inline-block mb-0">{{ form.vars.type_label }}</span>
            <div class="text-end">
                <button type="button" class="btn btn-sm btn-outline-primary field-card__toggle"
                        data-action="click->capture-element#toggle">
                    <i class="bi bi-chevron-down"></i>
                </button>
                <button type="button" class="btn btn-outline-danger btn-sm ms-1"
                        data-action="click->fields-ajax#delete"
                        title="Supprimer ce champ">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="field-card__body p-3 border-top">
        <div class="row">
            {# CONFIG #}
            <div class="col-md-6">
                <h6 class="mb-1">Général</h6>
                <div class="mb-2">
                    {{ form_row(form.name,    { row_attr: { class: 'mb-0' } }) }}
                </div>
                <div class="mb-2">
                    {{ form_row(form.required, { row_attr: { class: 'mb-0' } }) }}
                </div>
            </div>

            {# OPTIONS #}
            <div class="col-md-6">
                <h6 class="mb-1">Options</h6>
                {% if form.subtype is defined %}
                    {% if form.subtype.columns is defined %}
                        {{ form_label(form.subtype.columns) }}

                        {% set proto = form.subtype.columns.vars.prototype %}
                        {% set protoHtml %}
                            <div data-table-field-item="1" class="mb-2 border rounded p-2 d-flex align-items-center gap-2">
                                <div class="flex-grow-1">
                                    {{ form_row(proto.label) }}
                                </div>

                                <div class="flex-shrink-0">
                                    {{ form_row(proto.type) }}
                                </div>

                                {{ form_widget(proto.key) }}

                                <button type="button"
                                        class="btn btn-outline-danger btn-sm flex-shrink-0 mt-3"
                                        data-action="click->table-field#remove"
                                        title="Supprimer"
                                        aria-label="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        {% endset %}

                        <div
                            data-controller="table-field"
                            data-prototype="{{ protoHtml|e('html_attr') }}"
                            data-prototype-name="{{ proto.vars.name }}"
                            data-index="{{ form.subtype.columns|length }}"
                        >
                            <div data-table-field-target="container">
                                {% for col in form.subtype.columns %}
                                    <div data-table-field-item="1" class="mb-2 border rounded p-2 d-flex align-items-center gap-2">
                                        <div class="flex-grow-1">
                                            {{ form_row(col.label) }}
                                        </div>

                                        <div class="flex-shrink-0">
                                            {{ form_row(col.type) }}
                                        </div>

                                        {{ form_widget(col.key) }}

                                        <button type="button"
                                                class="btn btn-outline-danger btn-sm flex-shrink-0 mt-3"
                                                data-action="click->table-field#remove"
                                                title="Supprimer"
                                                aria-label="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                {% endfor %}
                            </div>

                            <button type="button"
                                    class="btn btn-outline-primary btn-sm mt-2"
                                    data-action="click->table-field#add">
                                Ajouter une colonne
                            </button>
                        </div>

                    {% else %}
                        {{ form_row(form.subtype) }}
                    {% endif %}
                {% endif %}

            </div>
        </div>
    </div>
</fieldset>
