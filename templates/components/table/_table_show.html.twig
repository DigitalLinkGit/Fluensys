{% set table_id = 'show_table_' ~ random() %}
{% set fields = fields is defined ? fields : [] %}
{% set object = object is defined ? object : null %}
{% import 'components/table/_table_cell.html.twig' as cell_format %}
<table class="table table-hover align-middle" id="{{ table_id }}">
    <thead class="table-light">
    <tr>
        <th>Propriété</th>
        <th>Valeur</th>
    </tr>
    <tbody>
    {% for field in fields %}
        {% set value = attribute_chain(object, field.property) %}
        <tr>
            <th scope="row" class="text-nowrap">{{ field.label }}</th>
            <td>
                {{ cell_format.value(value) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
