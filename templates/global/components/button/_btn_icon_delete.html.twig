<form method="post" action="{{ path(route, params) }}" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ params.id) }}">

    <button type="submit"
            class="btn btn-outline-primary btn-sm"
            title="Supprimer">
        <i class="bi bi-trash"></i>
    </button>
</form>

