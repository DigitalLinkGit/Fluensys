{# Header: title + account breadcrumb/info #}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>{{ templateMode ? 'Template de projet : ' : 'Projet : ' }}</h2>
    <div class="d-flex justify-content-end gap-3">
        {% if project.account is defined and project.account is not null %}
            <div>
                <span class="text-muted">Compte :</span>
                <a href="{{ path('app_account_edit', { id: project.account.id }) }}"
                   class="col-header text-decoration-none">
                    {{ project.account.name }}
                </a>
            </div>
        {% endif %}
        <div>
            {% import 'components/badge/_livecycle_Status_badge.html.twig' as badge %}
            {{ badge.status(project.statusLabel) }}
        </div>
    </div>
</div>
