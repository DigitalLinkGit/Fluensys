{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    {% include 'components/table/_table_show.html.twig' with {
        object: project,
        fields: [
            { label: 'Nom', property: 'name' },
            { label: 'Description', property: 'description' },
            { label: 'Statut', property: 'status' },
            { label: 'Template', property: 'template' },
        ]
    } %}

    {% include 'components/button/_btn_bar.html.twig' with {
        buttons: {
            back: {
                type: 'link',
                route: 'app_project_index',
                icon: 'bi-arrow-left',
                label: 'Retour',
                class: 'btn btn-outline-primary btn-sm'
            }
        }
    } %}
{% endblock %}
